{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@types/node", "@playwright/test"]
  },
  "include": ["./**/*.ts", "./**/*.json"],
  "exclude": ["node_modules", "!docs/**", "playwright-report", "test-results", "allure-results", "allure-report"]
}
