{
  "name": "playwright-a11y",
  "version": "1.0.0",
  "description": "Accessibility testing suite using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:comprehensive": "playwright test comprehensive-a11y.spec.ts",
    "test:a11y": "playwright test a11y.spec.ts",
    "test:console": "playwright test console-message.spec.ts",
    "test:example": "playwright test example.spec.ts",
    "report": "playwright show-report",
    "report:allure": "allure generate allure-results -o allure-report --clean && allure open allure-report"
  },
  "keywords": [
    "accessibility",
    "testing",
    "playwright",
    "a11y"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "latest",
    "@types/node": "^24.3.0",
    "allure-playwright": "latest",
    "playwright": "latest",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.7.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
